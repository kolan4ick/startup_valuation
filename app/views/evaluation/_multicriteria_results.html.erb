<div>
	<div class="container-fluid">
		<div class="card">
			<div class="card-header py-3">
				<div class="text-start" style="margin: 0px;padding: 5px 15px;">
					<p class="text-primary m-0 fw-bold">Нормування вхідних даних на 1 етапі</p>
				</div>
			</div>
			<div class="row">
				<div class="col-12">
					<div class="table-responsive">
						<table class="table">
							<thead>
							<tr>
								<th></th> <!-- Empty cell in the top-left corner -->
								<th class="text-center">x1</th>
								<th class="text-center">x2</th>
								<th class="text-center">x3</th>
								<th class="text-center">x4</th>
							</tr>
							</thead>
							<tbody>
							<% 9.times do | i | %>
								<tr>
									<td class="first-column"><strong>K <%= i + 1 %> </strong>
									</td> <!-- Header for each row -->
									<% 4.times do | j | %>
										<td class="text-center">
											<%= @normalized_xs[i][j].round(2) %>
										</td>
									<% end %>
								</tr>
							<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="pt-3">
	<div class="container-fluid">
		<div class="card">
			<div class="card-header py-3">
				<div class="text-start" style="margin: 0px;padding: 5px 15px;">
					<p class="text-primary m-0 fw-bold">Обчислення нормованих вагових коефіцієнтів</p>
				</div>
			</div>
			<div class="row">
				<div class="col-12">
					<div class="table-responsive">
						<table id="ipi-table" class="table table-striped table tablesorter">
							<thead class="thead-dark">
							<tr>
								<% 9.times do | i | %>
									<th class="text-center"><%= "P#{i + 1}" %></th>
								<% end %>
							</tr>
							</thead>
							<tbody class="text-center">
							<tr>
								<% @alpha.each do | p | %>
									<td class="text-center"><%= p.round(2) %></td>
								<% end %>
							</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="pt-3">
	<div class="container-fluid">
		<div class="card">
			<div class="card-header py-3">
				<div class="text-start" style="margin: 0px;padding: 5px 15px;">
					<p class="text-primary m-0 fw-bold">Обчислення обраної згортки</p>
				</div>
			</div>
			<div class="row">
				<div class="col-12">
					<div class="table-responsive">
						<table id="ipi-table" class="table table-striped table tablesorter">
							<thead class="thead-dark">
							<tr>
								<% 4.times do | i | %>
									<th class="text-center"><%= "X#{i + 1}" %></th>
								<% end %>
							</tr>
							</thead>
							<tbody class="text-center">
							<tr>
								<% @convolution_result.each do | c | %>
									<td class="text-center"><%= c.round(4) %></td>
								<% end %>
							</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
